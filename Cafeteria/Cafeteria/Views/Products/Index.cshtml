@model IEnumerable<Cafeteria.Models.Product>

@{
    ViewBag.Title = "Index";
}


<div class="row justify-content-center">
    <p class="display-4">
        Lista de Productos
    </p>
</div>

<p>
    <a href="@Url.Action("Create","Products")" class="btn btn-success btn-sm btn-icon-split">

        <span class="icon text-white-50"> <i class="fas fa-plus"></i> </span>
        <span class="text">Nuevo producto</span>
    </a>
</p>



<div class="row">
    @foreach (var item in Model)
    {

        <div class="col-xl-3 col-md-3 mb-4">
            <div class="card border-secondary shadow h-100 py-2">
                <div class="card-body" >
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-lg-center font-weight-bold text-primary text-uppercase mb-1">@item.ProductName</div>
                            <div class="text-lg-center font-weight-bold text-dark  mb-1">@item.Type</div>
                            <img class="card-img-top justify-content-center" src="@Url.Action("getimagen", "Products", new{ id=item.Id})" alt="Comida" style="width:100%;height:100px; ">
                            <div class="text-md-center font-weight-normal text-black mb-1">@item.Description</div>
                            <div class="text-md-right font-weight-normal text-success  mb-1">Precio: $@item.Price</div>

                        </div>

                    </div>
                    <div>
                        <a href="@Url.Action("Edit", "Products", new { id = item.Id })" class="btn btn-warning btn-md " style="margin-top:10%; margin-left:10%;">
                            <span class="text">Editar</span>
                        </a>
                        <a href="@Url.Action("Delete", "Products", new { id = item.Id })" class="btn btn-danger btn-md " style="margin-top:10%; margin-left:10%;">
                            <span class="text">Eliminar</span>
                        </a>
                    </div>



                </div>
            </div>

        </div>




    }
</div>








