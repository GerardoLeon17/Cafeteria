@model IEnumerable<Cafeteria.Models.Product>



@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Cafeteria Gerald</title>
    <link rel="icon" type="image/x-icon" href="~/Content/Img/Cafe.ico" />
    <!-- Font Awesome icons (free version)-->
    <script src="https://use.fontawesome.com/releases/v5.12.1/js/all.js" crossorigin="anonymous"></script>
    <!-- Google fonts-->
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet" type="text/css" />
    <link href="https://fonts.googleapis.com/css?family=Droid+Serif:400,700,400italic,700italic" rel="stylesheet" type="text/css" />
    <link href="https://fonts.googleapis.com/css?family=Roboto+Slab:400,100,300,700" rel="stylesheet" type="text/css" />
    <!-- Core theme CSS (includes Bootstrap)-->
    <link href="~/Content/startbootstrap-agency-gh-pages/css/styles.css" rel="stylesheet" />
</head>
<body id="page-top">
    <!-- Navegacion-->
    <nav class="navbar navbar-expand-lg navbar-dark fixed-top" id="mainNav">
        <div class="container">
            <a class="navbar-brand" href="@Url.Action("Index", "Home")">Cafeteria Gerald</a>
            <a class="navbar-brand js-scroll-trigger" href="#page-top"></a><button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">Menu<i class="fas fa-bars ml-1"></i></button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav text-uppercase ml-auto">
                    <li class="nav-item"><a class="nav-link js-scroll-trigger" href="@Url.Action("Login", "Account")">Iniciar Sesion</a></li>
                    <li class="nav-item"><a class="nav-link js-scroll-trigger" href="@Url.Action("Menu", "Home")">Menu</a></li>
                    <li class="nav-item"><a class="nav-link js-scroll-trigger" href="@Url.Action("Orden", "Home")">Orden</a></li>


                </ul>
            </div>
        </div>
    </nav>
    <!-- Masthead-->
    <header class="masthead">
        <div class="container">
            <div class="masthead-heading ">Menu</div>

        </div>
    </header>
    <!-- Menu-->
    <section class="page-section" id="services">
        <div class="container">
             
                <div class="text-center">
                    <h2 class="section-heading text-uppercase display-3 bg-dark text-white">Menu de Gerald</h2>
                    <br />
                    <br />

                    <div class="row">
                        @foreach (var item in Model)
                        {

                            <div class="col-xl-3 col-md-3 mb-4">
                                <div class="card border-dark shadow h-100 py-2" style="background-color:black;">
                                    <div class="card-body" style="background-color:#dbd8d8">
                                        <div class="row no-gutters align-items-center">
                                            <div class="col mr-2">
                                                <div class="text-lg-center font-weight-bold text-primary text-uppercase mb-1">@item.ProductName</div>
                                                <div class="text-lg-center font-weight-bold text-dark  mb-1">@item.Type</div>
                                                <img class="card-img-top justify-content-center" src="@Url.Action("getimagen", "Products", new{ id=item.Id})" alt="Comida" style="width:100%;height:100px; ">
                                                <div class="text-md-center font-weight-normal text-black mb-1">  @item.Description</div>
                                                <div class="text-md-right font-weight-normal text-success  mb-1">Precio: $@item.Price</div>

                                            </div>

                                        </div>
                                        <div>

                                            <a href="@Url.Action("Create", "Orders")" class="btn btn-success btn-sm " style="margin-top:20px; margin-left:20px;">
                                                <span class="text">Ordenar</span>
                                            </a>
                                        </div>



                                    </div>
                                </div>

                            </div>




                        }
                    </div>

                </div>
            </div>
            </div>
    </section>






    <!-- Footer-->
    <footer class="footer py-4">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-4 text-lg-left">Copyright © Cafeteria Gerald 2020</div>
                <div class="col-lg-4 my-3 my-lg-0">
                    <a class="btn btn-info btn-social mx-2" href="#!"><i class="fab fa-twitter"></i></a><a class="btn btn-info btn-social mx-2" href="#!"><i class="fab fa-facebook-f"></i></a><a class="btn btn-info btn-social mx-2" href="#!"><i class="fab fa-linkedin-in"></i></a>
                </div>

            </div>
        </div>
    </footer>

    <!-- Bootstrap core JS-->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.bundle.min.js"></script>
    <!-- Third party plugin JS-->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.4.1/jquery.easing.min.js"></script>
    <!-- Contact form JS-->
    <script src="~/Content/startbootstrap-agency-gh-pages/assets/mail/jqBootstrapValidation.js"></script>
    <script src="~/Content/startbootstrap-agency-gh-pages/assets/mail/contact_me.js"></script>
    <!-- Core theme JS-->
    <script src="~/Content/startbootstrap-agency-gh-pages/js/scripts.js"></script>
</body>
</html>


